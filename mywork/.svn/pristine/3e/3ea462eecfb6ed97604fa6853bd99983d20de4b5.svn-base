<script>
$( "input[name='addPhone']" ).change(function() {
	var addPhone = $("input[name='addPhone']").val();
	if(addPhone == '0900000000'){
		$("input[name='addPhone']").removeClass();
		$("input[name='addPhone']").addClass("form-control is-valid");
		//$("#checkPhone").css("color","green");
    	//$("#checkPhone").html("電話號碼可以使用!");
		return;
	}
	//alert(addPhone.length);return;
	if(addPhone.length == 10){
		$.ajax({
			 type:"POST",
			 url:"__URL__/ajaxCheckMemberPhone",
			 data:{addPhone:addPhone},
		     dataType: "text",
		     success:function(data){
		    	 //alert(data);
		        if(data == true){
		        	$("input[name='addPhone']").removeClass();
		        	$("input[name='addPhone']").addClass("form-control is-valid");
		        	//$("#checkPhone").css("color","green");
		        	//$("#checkPhone").html("電話號碼可以使用!");
		        } else {
		        	$("input[name='addPhone']").removeClass();
		        	$("input[name='addPhone']").addClass("form-control is-invalid");
		        	//$("#checkPhone").css("color","red");
		        	$("#checkPhone").html(data);
		        }
		     },
			 error:function(){
				alert("網路連線錯誤，請檢查您的網路狀況。");
			}
		});
	} else {
		$("input[name='addPhone']").removeClass();
		$("input[name='addPhone']").addClass("form-control is-invalid");
		//$("#checkPhone").css("color","red");
		//$("#checkPhone").html("電話長度不為10碼!");
	}
});
function openmodal(id){
	//alert(id);
	$('#'+id).modal('show')
}
$(document).ready(function(){
	$( "#btnok" ).click(function() {
		var addPhone = $("input[name='addPhone']").val();
		var addPassword = $("input[name='addPassword']").val();
		var addCheckPassword = $("input[name='addCheckPassword']").val();
		if(addPhone.length != 10){
			alert("電話長度不為10碼!");
			return;
		}
		if(addPassword != addCheckPassword){
			alert("請重新輸入確認密碼!");
			return;
		}
		if(addPassword.length <= 5){
			alert("密碼長度應界於6~20位之間");
			return;
		}
		$("#formRegist").submit();
		});
});
</script>
                  