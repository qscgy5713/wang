<include file="Common:header"/>

<div id="page-container" class="fade page-sidebar-fixed page-header-fixed page-with-wide-sidebar">
	<include file="Common:menu"/>
	<include file="Common:menu2"/>
	
	<div id="content" class="content">
	
		<form class="form-inline m-b-10" id="formInquire" method="post" action='__APP__/{$Think.MODULE_NAME}/{$Think.ACTION_NAME}'>
        	<input type="hidden" id="pageNumber" name="pageNumber" value="">
			<div class="row form-inline p-l-7" style="width:100%;">
				<div class="row col-lg-6 col-xl-1 p-r-5 p-l-5 m-r-0 m-l-0 m-b-10">
                  <div class="col-12 p-0">
                   <SELECT name="gameClassId" class="form-control" style="width:100%;">
						<VOLIST name="gameClassIdArray" id="vo" empty="$gameClassIdEmpty">
							<IF condition="$vo.gameClass_id eq $gameClassId">
								<option value="{$vo.gameClass_id}" selected="selected">{$vo.gameClass_showName}</option>
							<ELSE/>
								<option value="{$vo.gameClass_id}">{$vo.gameClass_showName}</option>
							</IF>
						</VOLIST>
					</SELECT>
                  </div>
				</div>
				<div class="row col-lg-6 col-xl-1 p-r-5 p-l-5 m-r-0 m-l-0 m-b-10">
                  <div class="col-12 p-0">
                   <SELECT name="year" class="form-control" style="width:100%;">
						<VOLIST name="yearArray" id="vo" empty="$yearEmpty">
							<IF condition="$key eq $year">
								<option value="{$key}" selected="selected">{$vo}</option>
							<ELSE/>
								<option value="{$key}">{$vo}</option>
							</IF>
						</VOLIST>
					</SELECT>
                  </div>
				</div>
				<div class="row col-lg-6 col-xl-1 p-r-5 p-l-5 m-r-0 m-l-0 m-b-10">
                  <div class="col-12 p-0">
                   <SELECT name="month" class="form-control" style="width:100%;">
						<VOLIST name="monthArray" id="vo" empty="$monthEmpty">
							<IF condition="$key eq $month">
								<option value="{$key}" selected="selected">{$vo}</option>
							<ELSE/>
								<option value="{$key}">{$vo}</option>
							</IF>
						</VOLIST>
					</SELECT>
                  </div>
				</div>
				
                  
				<div class="row col-lg-12 col-xl-4 p-r-5 p-l-5 m-r-0 m-l-0">
                  <div class="col-3 col-md-2 col-xl-4 text-center p-0 m-b-10"><label class="p-5">搜索帳號:</label></div>
                  
                  <div class="col-9 col-md-7 col-xl-6 p-r-0 p-l-0 m-b-10">
                    <input class="form-control" style="width:100%;" type="text" name="memberAccount" id="member_account" value="{$memberAccount}">
                  </div>
                  
                  <div class="row col-12 col-md-3 col-xl-2 p-r-0 p-l-0 m-r-0 m-l-0">
                    <div class="col-md-12 col-xl-10 p-l-0 p-r-0 m-b-10"><input class="btn btn-info p-r-0 p-l-0 m-r-5 m-l-5" style="width:100%;" type='submit' value='搜尋'></div>
                  </div>
				</div>
			</div>
		</form>
		
		<div class="row">
			<div class="col-lg-12 ui-sortable">
				<div class="panel panel-inverse">
					<div class="panel-heading ui-sortable-handle" data-click="panel-collapse">
						<div class="panel-heading-btn">
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning"><i class="fa fa-minus"></i></a>
						</div>
						<h4 class="panel-title">會員階層</h4>
					</div>
						<div class="panel-body">
							<div class="table-responsive">
								<table id="table1" class="table table-striped m-b-0">
									<thead>
										<tr>
											<th>序</th>
											<th>會員帳號</th>
											<th>遊戲類別</th>
											<th>年</th>
											<th>月</th>
											<th>階層</th>
											<th>返水率</th>
											<th>總洗碼</th>
											<th>最後修改時間</th>
										</tr>
									</thead>
									<tbody>
										<VOLIST name="showArray" id="vo" empty="$showEmpty">
				                        	<tr>
												<td>{$key+1}</td>
												<td>{$vo.memberAccount}</td>
												<td>{$vo.classShowName}</td>
												<td>{$vo.year}</td>
												<td>{$vo.month}</td>
												<td>{$vo.serial}</td>
												<td>{$vo.waterRate}</td>
												<td>{$vo.totalEffective}</td>
												<td>{$vo.modifyTime}</td>
											</tr>
				                        </VOLIST>
									</tbody>
								</table>
							</div>
						</div>
				</div>
			</div>
		</div>
        
	</div>
	<a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="material-icons">keyboard_arrow_up</i></a>
	</div>
	<!-- end #content -->
<include file="Common:footer"/>
<script type="text/javascript">

$(document).ready(function(){
	 $('#member_account').typeahead({
	    ajax: {
	      url: '__URL__/searchMemberName',
	      timeout: 200
	    }
	  });
});
function formTime(startTime,endTime){
	$("#startTime").val(startTime);
	$("#endTime").val(endTime);
	$("#formInquire").submit();
}
function goPage(pageNumber){
	$("#pageNumber").val(pageNumber);
	$("#formInquire").submit();
}
</script>