<include file="Common:header"/>
	<include file="Common:menu"/>
	<!-- begin #content -->
	<div id="content" class="content">
		 <p>
            <button class="btn btn-info m-r-5 m-b-5" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                                   新增跑馬燈內容
            </button>
         </p>
         
         <div class="collapse mb10" id="collapseExample" style="">
             <div class="card card-body">
             		<form class="ng-pristine ng-valid" method="post" action='__APP__/AdminManage/formAddAdmin'>
						<div class="row">
							<label class="col-form-label col-md-1">隸屬</label>
							<div class="col-md-1">
								<select class="form-control" name="addBelong">
									<option value="1">前台</option>
								　       <option value="2">代理</option>
								　       <option value="3">後台</option>
								</select>
							</div>
						
							<label class="col-form-label col-md-1">跑馬燈內容</label>
							<div class="col-md-8">
								<input type="text" class="form-control m-b-5" name="addText">
							</div>
							<div class="col-sm-1">
								<button type="submit" name="addbtn" class="btn btn-info m-r-5 m-b-5 ">確認新增</button>
							</div>
						</div>
					</form>
             </div>
         </div>
         
         <div class="col-lg-12 ui-sortable">
			<!-- begin panel -->
			<div class="panel panel-inverse" data-sortable-id="table-basic-7">
				<!-- begin panel-heading -->
				<div class="panel-heading ui-sortable-handle">
					<div class="panel-heading-btn">
						<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
						<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
						<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
						<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
					</div>
					<h4 class="panel-title">跑馬燈</h4>
				</div>
				<!-- end panel-heading -->
				
				<!-- begin panel-body -->
				<div class="panel-body">
							<!-- begin table-responsive -->
					<div class="table-responsive">
						<table class="table table-striped m-b-0">
							<thead>
								<tr>
									<th>分類</th>
								</tr>
								<tr>
									<th>序</th>
									<th>隸屬</th>
									<th>排序</th>
									<th>開關</th>
									<th>內文</th>
									<th>建立時間</th>
									<th>修改時間</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								<VOLIST name="showArray" id="vo">
									<tr>
										<td>{$key}</td>
									</tr>
									<VOLIST name="vo" id="vo1">
			                        	<tr>
				                        	<td>{$key+1}</td>
											<td>{$vo1.belong}</td>
											<td>{$vo1.order}</td>
											<td>{$vo1.enabled}</td>
											<td>{$vo1.text}</td>
											<td>{$vo1.createTime}</td>
											<td>{$vo1.modifyTime}</td>
											<td>
												<a href="#" onclick="openmodal({$key+1})" class="btn btn-info m-r-5 m-b-5" data-toggle="modal">修改</a>
												<div class="modal fade" id="{$key+1}" style="display: none;" aria-hidden="true">
													<div class="modal-dialog">
														<div class="modal-content">
															<div class="modal-header">
																<h4 class="modal-title">修改跑馬燈資料</h4>
																<button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
															</div>
															<div class="modal-body">
																<p>
																	<form method="post" action='__APP__/MarqueeManage/formSetMarquee'>
																		
											                            <div class="form-group ">
											                                <input type="hidden" value="{$vo1.id}" name="setId">
											                            </div>
											                            <div class="form-group ">   
											                            	<label >隸屬</label>             
											                                <select class="form-control" name="setBelong">
												                                <if condition="$vo1.belong eq 前台">
																					<option value="1" selected>前台</option>
																				<else />
																					<option value="1">前台</option>
																				</if>
																				<if condition="$vo1.belong eq 代理">
																					<option value="2" selected>代理</option>
																				<else />
																					<option value="2">代理</option>
																				</if>
																				<if condition="$vo1.belong eq 後台">
																					<option value="3" selected>後台</option>
																				<else />
																					<option value="3">後台</option>
																				</if>
												                            </select>
											                            </div>
											                             <div class="form-group ">                
											                                <label >內文</label>
											                                <textarea class="form-control" name="setText" rows="3">{$vo1.text}</textarea>
											                             </div>
																</p>
																</div>
																<div class="modal-footer">
																	<button type="submit" name ="okbtn" class="btn btn-info m-r-5 m-b-5">確認修改</button>
																</div>
														    </form>
														</div>
													</div>
												</div>
												<form class="div-style" method="post" action='__APP__/MarqueeManage/formStopMarquee'>
													<input type="hidden" value="{$vo1.id}" name="stopId">
				                                	<button type="submit" class="btn btn-info m-r-5 m-b-5">停用</button>
				                                </form>
				                                <form class="div-style" method="post" action='__APP__/MarqueeManage/formStartMarquee'>
				                                	<input type="hidden" value="{$vo1.id}" name="startId">	
				                                	<button type="submit" class="btn btn-info m-r-5 m-b-5">啟用</button>
				                                </form>
				                                <form class="div-style" method="post" action='__APP__/MarqueeManage/formDelMarquee'>
				                                	<input type="hidden" value="{$vo1.id}" name="delId">	
				                                	<button type="submit" class="btn btn-info m-r-5 m-b-5">刪除</button>
				                                </form>
			                                </td>
										</tr>
									</VOLIST>
		                        </VOLIST>
							</tbody>
						</table>
					</div>
					<!-- end table-responsive -->
				</div>
				<!-- end panel-body -->
				
				<div class="col-md-12 panel-body text-center">
					<div class="btn-group">
						<button type="button" class="btn btn-white">1</button>
						<button type="button" class="btn btn-white active">2</button>
						<button type="button" class="btn btn-white">3</button>
					</div>
					<div class="btn-group">
						<button type="button" class="btn btn-white">4</button>
						<button type="button" class="btn btn-white">5</button>
						<button type="button" class="btn btn-white">6</button>
					</div>
					<div class="btn-group">
						<button type="button" class="btn btn-white">7</button>
					</div>
					
				</div>
				
				
			</div>
			<!-- end panel -->
		</div>
	</div>
	<!-- end #content -->
<include file="Common:footer"/>
<script>
function openmodal(id){
	//alert(id);
	$('#'+id).modal('show')
}
</script>   