<include file="Common:header"/>
	<div id="wrapper">
		<include file="Common:loginMenu"/>
		<include file="Common:menuNoFixed"/>
		<include file="Common:menuRwd"/>
		
<if condition='$gameLink eq "false"'>
		<section id="slider" class="slider fullwidthbanner-container roundedcorners">
			<div class="fullscreenbanner" data-navigationStyle="preview1">
				<ul class="hide">
					<!-- SLIDE  -->
					<li class="li-transform" data-transition="random" data-slotamount="1" data-masterspeed="1000" data-saveperformance="off" data-title="Slide title 1" data-thumb="">

						<img src="" data-lazyload="__CSS__/images/bg-img/index_banner02-bg.jpg" alt="" data-bgfit="cover" data-bgposition="center top" data-bgrepeat="no-repeat" />
						
						<div class="tp-caption customin ltl tp-resizeme large_bold_white"
							data-x="800"
							data-y="100"
							data-customin="x:0;y:150;z:0;rotationZ:0;scaleX:1;scaleY:1;skewX:0;skewY:0;opacity:0;transformPerspective:200;transformOrigin:50% 0%;"
							data-speed="800"
							data-start="1200"
							data-easing="easeOutQuad"
							data-splitin="none"
							data-splitout="none"
							data-elementdelay="0.01"
							data-endelementdelay="0.1"
							data-endspeed="1000"
							data-endeasing="Power4.easeIn" style="z-index: 10;">
							{$gameName}
						</div>
						
						<div class="tp-caption customin ltl tp-resizeme"
							data-x="800"
							data-y="200"
							data-customin="x:0;y:150;z:0;rotationZ:0;scaleX:1;scaleY:1;skewX:0;skewY:0;opacity:0;transformPerspective:200;transformOrigin:50% 0%;"
							data-speed="800"
							data-start="1550"
							data-easing="easeOutQuad"
							data-splitin="none"
							data-splitout="none"
							data-elementdelay="0.01"
							data-endelementdelay="0.1"
							data-endspeed="1000"
							data-endeasing="Power4.easeIn" style="z-index: 10;">
							
							<label class="txt-white">電子錢包</label>
							<input type="text" value="{$memberWallet}" readonly class="form-control required" style="width: 317px;">
							<label class="txt-white mt-10">錯誤訊息</label>
							<input type="text" id="memberBalance" value="{$memberBalance}" readonly class="form-control required" style="width: 317px;">
							<a href="#" onclick="reloadPage()" class="btn btn-default btn-lg">
								<span>GO</span> 
							</a>
						</div>
						
					</li>
				</ul>
				<div class="tp-bannertimer"></div>
			</div>
		</section>
<else/>
	<iframe id="game_iframe" class="md-gameEnter la-gameEnter" src="{$gameLink}" name="gameIframe" width="100%" height="100%" frameborder="0" scrolling="auto"></iframe>
</if>
<include file="Common:game_footer"/>
<script type="text/javascript">

jQuery(document).ready(mobileChange);  
//resize event
window.addEventListener('resize', function() {
	mobileChange();
}, false);
function mobileChange() {
	var h = jQuery(window).height();
	var topBar_h = jQuery('#topBar').height();
	var header_h = jQuery('#header').height();
	if(isMobile()){
		var menu_RWD_h = jQuery('.menu_RWD').height();
		 jQuery("#game_iframe").css({"min-height":h-7+"px","padding-top":menu_RWD_h+"px"});
	}else{
		 jQuery("#game_iframe").css({"min-height":h-7+"px","padding-top":topBar_h+header_h+"px"});
	} 
}
//偵測是否為行動裝置
function isMobile() {

  try{ document.createEvent("TouchEvent"); return true; }

  catch(e){ return false;}

}

$(document).ready(function(){
	if("{$gameLink}" == "false"){
	    $("#memberBalance").val("載入遊戲失敗，請聯繫客服!");
	    alert("{$errMessage}");
	}
});
function reloadPage(){
	location.reload();
}
