            '撲克' => array(),
            '三輪斯洛' => array(),
            '五輪斯洛' => array(),
            '六輪斯洛' => array(),
            '刮刮卡' => array(),
        );
        
        $arrGamesCountData = array(
            '桌遊' => '',
            '特製' => '',
            '撲克' => '',
            '三輪斯洛' => '',
            '五輪斯洛' => '',
            '六輪斯洛' => '',
            '刮刮卡' => '',
        );
        
        $arrDisplayGames = array();
