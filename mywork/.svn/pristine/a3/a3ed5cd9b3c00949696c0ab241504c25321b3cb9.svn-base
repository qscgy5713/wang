        //讀取會員活動資料 結束

        //讀取會員基本資料 開始
        $CommonMember = D("CommonMember");
        $data = array(
            "member_id"=>$memberId
        );
        $return = $CommonMember->getMemberDataUseProcessWithdraw($data,$err);
        if($return === false){
