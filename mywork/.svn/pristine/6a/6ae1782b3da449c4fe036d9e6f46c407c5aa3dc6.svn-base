								<tbody>
									<VOLIST name="showArray" id="vo" empty="$showEmpty">
										<tr>
											<td>{$key+1}</td>
											<td>{$vo.account}</td>
											<td>{$vo.superiorGiving}</td>
											<td>{$vo.ratioRemark}</td>
											<td>{$vo.status}</td>
											<td>{$vo.createTime}</td>
											<td>{$vo.contact}</td>
											<td>{$vo.contactWay}</td>
											<td>{$vo.phone}</td>
											<td>{$vo.remark}</td>
											<td>
												<if condition="$vo.status eq '正常代理'">
													<form class="div-style" method="post" action='__APP__/AgentManage/formStopAgent'>
								                    	<input type="hidden" value="{$vo.id}" name="stopId">
								                    	<button type="submit" class="btn btn-warning f-s-13 p-5">停權</button>
								                    </form>
												<else/>
													<form class="div-style" method="post" action='__APP__/AgentManage/formStartAgent'>
								                    	<input type="hidden" value="{$vo.id}" name="stopId">
								                    	<button type="submit" class="btn btn-green f-s-13 p-5">啟用</button>
								                    </form>
												</if>
											
							                    
												<button onclick="openmodal('setModal','{$vo.id}','{$vo.account}','{$vo.superiorGiving}','{$vo.ratioRemark}','{$vo.contact}','{$vo.contactWay}','{$vo.phone}','{$vo.remark}')" type="button" class="btn btn-danger f-s-13 p-5">修改</button>
