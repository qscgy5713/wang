<include file="Common:header"/> 
<include file="Common:menu"/>
 <section class="main-container padding-bottom-clear md-main-container">
 	<div class="container bg-color pt-2">
 		<div class="row">
 		<include file="Common:marquee"/>
 			<div class="main col-lg-12">
				<h2 class="mt-4 text-white">贈點紀錄</h2>
			 	<div class="separator-2"></div>
			 	
			 	<include file="Common:MemberCenterMenu"/>
	     
			     <div class="tab-content">
	                <div class="tab-pane fade show active" role="tabpanel" >
	                  <div class="row">
	                    <div class="col-md-12">
	                    	<table id="table1" class="table table-striped table-colored">
				                <thead>
				                  <tr>
	                                <th>單號</th>
	                                <th>時間</th>
	                                <th>內容</th>
	                                <th>結果</th>
	                              </tr>
				                </thead>
				                
				                <tbody>
				                	<VOLIST name="showArray" id="vo">
		                            	<tr class="aservise">
		                            		<td>{$vo.id}</td>
		                            		<td>{$vo.createTime}</td>
											<td>{$vo.money}</td>
											<td>{$vo.lottofour}</td>
											<td>{$vo.lotterTime}</td>
											<td>{$vo.result}</td>
		                            	</tr>
		                             </VOLIST>
		                            <tr><td id="showMessage" colspan="4" align="center" style="display:none;">無贈點紀錄</td></tr>
		                        </tbody>
				              </table>
	                    </div>
	                  </div>
	                  
	                  <if condition="$pageNumber neq ''">
		                  <div class="row">
			                  <div class="main col-lg-12">
			                  		<nav aria-label="Page navigation">
						                <ul class="pagination justify-content-center">
						                
						                <if condition="$pageNumber-1 neq 0">
						                  <li class="page-item">
						                    <a class="page-link" href="__APP__/MemberCenter/givenRecord&pageNumber={$pageNumber-1}" aria-label="Previous">
						                      <i aria-hidden="true" class="fa fa-angle-left pt10"></i>
						                      <span class="sr-only">Previous</span>
						                    </a>
						                  </li>
						                 </if>
						                  
						                  <for start="0" end="$totalPage">
						                  	<if condition="$totalPage elt 5">
						                  		<li id="{$i+1}Page" class="page-item"><a class="page-link" href="__APP__/MemberCenter/givenRecord&pageNumber={$i+1}">{$i+1}</a></li>
						                  	</if>
						                  </for>
						                  
						                  <if condition="$pageNumber+1 elt $totalPage ">
							                  <li class="page-item">
							                    <a class="page-link" href="__APP__/MemberCenter/givenRecord&pageNumber={$pageNumber+1}" aria-label="Next">
							                      <i aria-hidden="true" class="fa fa-angle-right pt10"></i>
							                      <span class="sr-only">Next</span>
							                    </a>
							                  </li>
						                  </if>
						                </ul>
						              </nav>
			                  </div>
		                  </div>
	                  </if>
	                  
	                  
	                </div>
	              </div>
			</div>
 		</div>
 	</div>
 </section>
<include file="Common:footer"/>
<script>
$(document).ready(function(){
	//alert("{$i+1}Page");
	$("#"+"{$actionName}").addClass("active");
	$("#"+"{$i+1}Page").addClass("active");
	$("#"+"{$actionName}"+"RWD").attr("selected",true);
	if($("#table1 tbody tr").length <= 1){
		//alert($("#test tbody tr").length);
		$("#showMessage").show()
	}
})
</script>