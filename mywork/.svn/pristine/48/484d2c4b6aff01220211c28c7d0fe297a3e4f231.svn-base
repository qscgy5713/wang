        }
        $totalNumber = $return["totalNumber"];//總筆數
        //var_dump($totalNumber);
        $totalPage = ceil($totalNumber / $this->memberNumberNumber);//總頁數
        $pageArray = getPageArray($pageNumber, $totalPage, $this->memberPageMoreNumber); //取得分頁陣列

