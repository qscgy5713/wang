    /**
     * 初始化
     */
    protected function _initialize() {
        // 執行父類初始化
        parent::_initialize();
        if(empty($_SESSION['Member']['id'])){
            return;
        } else {
            $this->formEnabled = true;//代表會員有登入 可開放功能
        }
    }
