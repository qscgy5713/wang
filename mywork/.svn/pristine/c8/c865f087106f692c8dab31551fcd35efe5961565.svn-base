    protected $storegift = false;//儲值送點數　活動
    protected $storegift_eventId = 0;
    protected $storegift_money = 1000;
    
    protected $reversal_eventId = 0;//翻本金
    protected $reversal_money = 888;
    protected $reversal_limitSurplus = 10000;
    
