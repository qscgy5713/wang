<script>
$(document).ready(function(){
	//送出
	$("button[name='btnok']").click(function(){
		var money = $("input[name='money']").val();//儲值點數
		var code = $('#code').val();
		
		
		if(parseInt(money) < 1000){
			 alert("單筆儲值最低1000點!");
			 return;
		}
		
		if(code == 'YP_Store' || code == 'NP_Store'){
			if(parseInt(money) > 5000){
				alert("超商儲值最高為5000點!");
				 return;
			}
		}
		
		$("#formPointRecharge").submit();
		 $("#loader-bg").show();
		 $("#loader-text").show();
		
	 })
	
});
