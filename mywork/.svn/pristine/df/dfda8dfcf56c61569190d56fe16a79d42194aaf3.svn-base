<include file="Common:header"/>
<div id="page-loader" class="fade show"><span class="spinner"></span></div>
<div id="page-container" class="fade page-sidebar-fixed page-header-fixed">
	<include file="Common:menu"/>
	<include file="Common:menu2"/>
	<div class="sidebar-bg"></div>
	
	<div id="content" class="content">
		<div class="form-group row m-b-15">
			<ol class="breadcrumb pull-left">
				<VOLIST name="loginArray" id="vo">
					<li class="breadcrumb-item">
						<a onclick="formAgent('{$vo.agentAccount}','{$vo.agentTree}')" href="#" >{$vo.agentAccount}</a>
					</li>
				</VOLIST>
			</ol>
		</div>
		
		<form class="div-style" id="formInquire" method="POST" action='__APP__/{$Think.MODULE_NAME}/{$Think.ACTION_NAME}'>
			
			<div class="row form-group m-b-10">
				<div class="col-md-3 m-b-5">
					<input class="btn btn-pink f-s-13 m-b-2" type="button" value="昨日" onClick="formTime('{$yesterday} 00:00:00','{$yesterday} 23:59:59')"/>
					<input class="btn btn-pink f-s-13 m-b-2" type="button" value="本週" onClick="formTime('{$thisWeekA} 00:00:00','{$thisWeekB} 23:59:59')"/>
					<input class="btn btn-pink f-s-13 m-b-2" type="button" value="上週" onClick="formTime('{$lastWeekA} 00:00:00','{$lastWeekB} 23:59:59')"/>
					<input class="btn btn-pink f-s-13 m-b-2" type="button" value="本月" onClick="formTime('{$thisMonthA} 00:00:00','{$thisMonthB} 23:59:59')"/>
					<input class="btn btn-pink f-s-13 m-b-2" type="button" value="上月" onClick="formTime('{$lastMonthA} 00:00:00','{$lastMonthB} 23:59:59')"/>
				</div>
				<div class="col-md-8 m-b-5">
					<div class="row row-space-10">
					
						<div class="col-md-3">
							<input type="text" class="form-control text-center" id="startTime" placeholder="開始日" name="startTime" value="{$startTime}" autocomplete="off" disableautocomplete>
						</div>
						
						<div class="col-md-1 text-center">
							<label class="col-form-label">至</label>
						</div>
						
						<div class="col-md-3">
							<input type="text" class="form-control text-center" id="endTime" placeholder="結束日" name="endTime" value="{$endTime}" autocomplete="off" disableautocomplete>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-1 m-b-5">
					<label class="col-form-label">搜索帳號 :</label>
				</div>
				<div class="col-md-2 m-b-5">
					<input class="form-control" type="text" name="memberAccount" id="member_account" value="{$memberAccount}">
				</div>
				<div class="col-md-3 m-b-5">
					<input id="agentTree" type='hidden' name='agentTree' value='{$comeAgentTree}'>
					<input id="agentAccount" type='hidden' name='agentAccount' value='{$comeAgentAccount}'>
					<input class="btn btn-pink m-r-5 m-b-10 " type="submit" value="查詢">
				</div>
			</div>
		</form>
		
		<div class="row">
			<div class="col-lg-12 ui-sortable">
				<!-- begin panel -->
				<div class="panel panel-inverse" data-sortable-id="table-basic-1">
					<!-- begin panel-heading -->
					<div class="panel-heading ui-sortable-handle">
						<div class="panel-heading-btn">
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
						</div>
						<h4 class="panel-title f-s-15">類別贈點</h4>
					</div>
					<!-- end panel-heading -->
					
					<!-- begin panel-body -->
					<div class="panel-body">
						<!-- begin table-responsive -->
						<div class="table-responsive">
							<table id="table1" class="table table-striped m-b-0">
				               <thead>
				                	<th colspan='2'></th>
				                    <th>總點數和:{$typesTotalMoney}</th>
				                    <th>總筆數:{$typesTotalNumber}</th>
				               </thead>
							   <thead>
			                      <tr>
				                      <th>序</th>
				                      <th>類別</th>
				                      <th>點數和</th>
				                      <th>筆數</th>
			                      </tr>
				                </thead>
								<tbody>
									<VOLIST name="typesArray" id="vo" empty="$typesEmpty">
										<tr>
											<td>{$key+1}</td>
											<td>{$vo.givenName}</td>
											<td>{$vo.allMoney}</td>
											<td>{$vo.allNumber}</td>
										</tr>
									</VOLIST>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 ui-sortable">
				<!-- begin panel -->
				<div class="panel panel-inverse" data-sortable-id="table-basic-1">
					<!-- begin panel-heading -->
					<div class="panel-heading ui-sortable-handle">
						<div class="panel-heading-btn">
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
						</div>
						<h4 class="panel-title f-s-15">代理贈點</h4>
					</div>
					<!-- end panel-heading -->
					
					<!-- begin panel-body -->
					<div class="panel-body">
						<!-- begin table-responsive -->
						<div class="table-responsive">
							<table id="table2" class="table table-striped m-b-0">
								<thead>
			                      <tr>
				                      <th colspan='2'></th>
				                      <th>總點數和</th>
				                      <th>總筆數</th>
			                      </tr>
				               </thead>
				               <tbody>
				                	<td colspan='2'></td>
				                    <td>{$agentTotalMoney}</td>
				                    <td>{$agentTotalNumber}</td>
				                </tbody>
							   <thead>
			                      <tr>
				                      <th>序</th>
				                      <th>代理帳號</th>
				                      <th>點數和</th>
				                      <th>筆數</th>
			                      </tr>
				                </thead>
								<tbody>
									<VOLIST name="agentArray" id="vo" empty="$agentEmpty">
										<tr>
											<td>{$key+1}</td>
											<td><input class="btn btn-pink f-s-13 p-5" type='button' value='{$vo.agent_account}' onclick="formAgent('{$vo.agent_account}','{$vo.agent_tree}')"></td>
											<td>{$vo.allMoney}</td>
											<td>{$vo.allNumber}</td>
										</tr>
									</VOLIST>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12 ui-sortable">
				<!-- begin panel -->
				<div class="panel panel-inverse" data-sortable-id="table-basic-1">
					<!-- begin panel-heading -->
					<div class="panel-heading ui-sortable-handle">
						<div class="panel-heading-btn">
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-warning" data-click="panel-collapse"><i class="fa fa-minus"></i></a>
							<a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-danger" data-click="panel-remove"><i class="fa fa-times"></i></a>
						</div>
						<h4 class="panel-title f-s-15">會員贈點</h4>
					</div>
					<!-- end panel-heading -->
					
					<!-- begin panel-body -->
					<div class="panel-body">
						<!-- begin table-responsive -->
						<div class="table-responsive">
							<table id="table3" class="table table-striped m-b-0">
								<thead>
			                      <tr>
				                      <th colspan='2'></th>
				                      <th>總點數和</th>
				                      <th>總筆數</th>
			                      </tr>
				               </thead>
				                <tbody>
				                	<td colspan='2'></td>
				                    <td>{$memberTotalMoney}</td>
				                    <td>{$memberTotalNumber}</td>
				                </tbody>
							   <thead>
			                      <tr>
				                      <th>序</th>
				                      <th>會員帳號</th>
				                      <th>點數和</th>
				                      <th>筆數</th>
			                      </tr>
				                </thead>
								<tbody>
									<VOLIST name="memberArray" id="vo" empty="$memberEmpty">
										<tr>
											<td>{$key+1}</td>
											<td>{$vo.member_account}</td>
											<td>{$vo.allMoney}</td>
											<td>{$vo.allNumber}</td>
										</tr>
									</VOLIST>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<a href="javascript:;" class="btn btn-icon btn-circle btn-success btn-scroll-to-top fade" data-click="scroll-top"><i class="fa fa-angle-up"></i></a>
</div>
<include file="Common:footer"/>

<script>
$(function(){
	$( "#startTime" ).datetimepicker({
    	dateFormat: "yy-mm-dd",
    	timeFormat: "HH:mm:ss",
        maxDate: "+0",
        changeMonth: true,
        numberOfMonths: 1,
        // showButtonPanel: true,
        onClose: function( selectedDate ) {
            $( "#endtime" ).datepicker( "option", "minDate", selectedDate );
        }
    });
    $( "#endTime" ).datetimepicker({
    	dateFormat: "yy-mm-dd",
    	timeFormat: "HH:mm:ss",
        maxDate: "+0",
        changeMonth: true,
        numberOfMonths: 1,
        // showButtonPanel: true,
        onClose: function( selectedDate ) {
            $( "#begintime" ).datepicker( "option", "maxDate", selectedDate );
        }
    });
    $("#"+"報表部門").addClass("active");
	$("#"+"{$Think.MODULE_NAME}").addClass("active");
	$('#member_account').typeahead({
	    ajax: {
	      url: '__URL__/searchMemberName',
	      timeout: 200
	    }
	  });
});
function formTime(startTime,endTime){
	$("#startTime").val(startTime);
	$("#endTime").val(endTime);
	$("#formInquire").submit();
}
function formAgent(agentAccount,agentTree){
	$("#agentAccount").val(agentAccount);
	$("#agentTree").val(agentTree);
	$("#formInquire").submit();
}
</script>